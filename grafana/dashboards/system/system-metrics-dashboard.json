  "panels": [
    {
      "title": "System Resources",
      "type": "row",
      "collapsed": false,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "title": "CPU Usage",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 1
      },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU %"
        }
      ],
      "options": {
        "maxValue": 100,
        "minValue": 0,
        "thresholds": [
          { "color": "green", "value": null },
          { "color": "yellow", "value": 70 },
          { "color": "red", "value": 85 }
        ]
      }
    },
    {
      "title": "Memory Usage",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 1
      },
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
          "legendFormat": "Memory %"
        }
      ]
    },
    {
      "title": "Disk I/O",
      "type": "graph",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 1
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[5m])",
          "legendFormat": "Read bytes/sec"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[5m])",
          "legendFormat": "Write bytes/sec"
        }
      ]
    },
    {
      "title": "Network I/O",
      "type": "graph",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[5m])",
          "legendFormat": "Received bytes/sec"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[5m])",
          "legendFormat": "Transmitted bytes/sec"
        }
      ]
    },
    {
      "title": "GPU Metrics",
      "type": "row",
      "collapsed": false,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 17
      }
    },
    {
      "title": "GPU Utilization",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 18
      },
      "targets": [
        {
          "expr": "nvidia_gpu_duty_cycle",
          "legendFormat": "GPU {{gpu}} Usage %"
        }
      ],
      "options": {
        "maxValue": 100,
        "minValue": 0,
        "thresholds": [
          { "color": "green", "value": null },
          { "color": "yellow", "value": 80 },
          { "color": "red", "value": 90 }
        ]
      }
    },
    {
      "title": "GPU Memory Usage",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 18
      },
      "targets": [
        {
          "expr": "nvidia_gpu_memory_used_bytes / nvidia_gpu_memory_total_bytes * 100",
          "legendFormat": "GPU {{gpu}} Memory %"
        }
      ],
      "options": {
        "maxValue": 100,
        "minValue": 0,
        "thresholds": [
          { "color": "green", "value": null },
          { "color": "yellow", "value": 80 },
          { "color": "red", "value": 90 }
        ]
      }
    },
    {
      "title": "GPU Temperature",
      "type": "graph",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 18
      },
      "targets": [
        {
          "expr": "nvidia_gpu_temperature_celsius",
          "legendFormat": "GPU {{gpu}} Temp Â°C"
        }
      ],
      "yaxes": [
        {
          "format": "celsius",
          "label": "Temperature",
          "min": 0,
          "max": 100
        },
        {
          "format": "short",
          "show": false
        }
      ],
      "alert": {
        "name": "High GPU Temperature",
        "conditions": [
          {
            "type": "query",
            "evaluator": {
              "type": "gt",
              "params": [85]
            }
          }
        ],
        "frequency": "1m"
      }
    }
  ],
  "refresh": "5s",
